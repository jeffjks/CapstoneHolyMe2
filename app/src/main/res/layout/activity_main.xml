<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user_pc.myapplication.MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="11dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="원하는 매크로를 설정하세요"
            android:textAlignment="viewStart"
            android:textAllCaps="true"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="368dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <Button
                    android:id="@+id/buttonWIFIon"
                    android:layout_width="match_parent"
                    android:layout_height="91dp"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/holo_blue_dark"
                    android:text="  집 도착하면 와이파이 켜기   \n ________________________________"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonWIFIoff"
                    android:layout_width="match_parent"
                    android:layout_height="91dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorAccent"
                    android:text="  집 나가면 와이파이 끄기   \n ________________________________"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonBrightnessOn"
                    android:layout_width="match_parent"
                    android:layout_height="91dp"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/holo_red_light"
                    android:text="  집 나가면 밝기 조정하기   \n ________________________________"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonBrightnessOff"
                    android:layout_width="match_parent"
                    android:layout_height="91dp"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/holo_blue_dark"
                    android:text="  집 들어오면 밝기 조정하기   \n ________________________________"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonAppPushListener"
                    android:layout_width="match_parent"
                    android:layout_height="91dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorAccent"
                    android:text="  앱 푸시 읽어오기   \n ________________________________"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonKakao"
                    android:layout_width="match_parent"
                    android:layout_height="91dp"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/holo_red_light"
                    android:text="  카카오톡으로 알림 보내기   \n ________________________________"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonWeather"
                    android:layout_width="match_parent"
                    android:layout_height="91dp"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/holo_blue_dark"
                    android:text="  날씨 읽어오기   \n ________________________________"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp"
                    android:textStyle="bold" />


                <Button
                    android:id="@+id/buttonMessage"
                    android:layout_width="match_parent"
                    android:layout_height="91dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorAccent"
                    android:text="  메세지 보내기   \n ________________________________"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonAlarm"
                    android:layout_width="match_parent"
                    android:layout_height="91dp"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/holo_red_light"
                    android:text="  알람 설정하기   \n ________________________________"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
